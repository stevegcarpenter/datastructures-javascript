{
  "rules": {
    "extends": "react-app" ,
    "no-console": "off",
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ]
  },
  "globals": {
    "err": true,
    "req": true,
    "res": true,
    "next": true
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "mocha": true,
    "jasmine": true,
    "mongo": true,
    "jquery": true,
    "browser": true,
    "commonjs": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "classes": true,
      "jsx": true,
      "templateStrings": true,
      "spread": true,
      "modules": true,
      "experimentalObjectRestSpread": true,
      "impliedStrict": true
    }
  },
  "extends": "eslint:recommended"
}
